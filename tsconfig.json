{
  "compilerOptions": {
    "watch": false,
    "lib": ["esnext", "dom"],
    "removeComments": true,
    "target": "es2021",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
